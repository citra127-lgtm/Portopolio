<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5"
    tools:context=".Profile" >
    
   

    
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/putih"
            android:orientation="horizontal"
            android:layout_marginTop="170dp"
            android:gravity="center">
            
            
        </LinearLayout>
        
        <TextView
            android:id="@+id/tikk1" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Citra gadis marindau"
            android:textSize="17dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_marginTop="42dp"
            />
        
        <TextView
            android:id="@+id/tikk2" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Pelajar SMKN 4 PADALARANG"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tikk1"
            />
        
        <TextView
            android:id="@+id/tikk3" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Bandung, Padalarang, Ciburuuy RT/01 RW/01"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tikk2"
           
            />
        
        <ImageView 
                android:id="@+id/imges"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:src="@drawable/saya"
                android:layout_marginTop="25dp"
                android:layout_below="@id/tikk3"
                />
        
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="195dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/jmlapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="63"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appriciation"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/jmlwr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="37"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Following"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/jmlflw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2700"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="followers"
                android:textSize="20dp" />
        </LinearLayout>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/garisabout"
            android:orientation="horizontal"
            android:layout_marginTop="455dp"
            android:gravity="center">
            
            
        </LinearLayout>
        
        <TextView 
            android:id="@+id/trd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="About Citra gm"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/imges"
            />
        
        <TextView 
            android:id="@+id/sklh"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Pelajar asal sekolah SMKN
4 PADALANG dengan jurusan oracle
saat ini sedang di jenjang smk kelas 11"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/trd"
            />
        
        <Button 
        android:id="@+id/btnlogout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="LOGOUT"
        android:layout_below="@id/password"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border"
        android:textColor="#fff"
        />
        
        <ImageView 
            android:id="@+id/panah"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:src="@drawable/panah"
            android:layout_marginRight="260dp"
            android:layout_marginTop="10dp"
            />
        
         <ImageView 
        android:id="@+id/edit"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:src="@drawable/edit"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="10dp"
       
        />
      
        

</RelativeLayout>
